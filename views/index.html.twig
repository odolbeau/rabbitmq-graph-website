{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row marketing">
        <div class="col-lg-12">
            <h2>Graph your RabbitMQ !</h2>

            <form role="form" class="form-horizontal" method="POST" action="">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="url">Url</label>
                    <div class="col-sm-10">
                        <input type="url" class="form-control input-lg" id="url" name="url" placeholder="Enter RabbitMQ Url">
                        <span class="help-block">For example: http://rabbitmq.mydomain.com:15672/api/...</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        or
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="definitions">Definitions</label>
                    <div class="col-sm-10">
                        <textarea class="form-control input-lg" id="definitions" name="definitions" placeholder="Enter your RabbitMQ definitions"></textarea>
                    </div>
                </div>
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Graph !</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
