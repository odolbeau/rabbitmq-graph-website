{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Provide informations!</strong> Paste your RabbitMQ definitions
        </div>
    </div>

    <div class="col-lg-12">
        <form role="form" class="form-horizontal" method="POST" action="">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="definitions">Definitions</label>
                <div class="col-sm-10">
                    <textarea class="form-control input-lg" id="definitions" name="definitions" placeholder="Enter your RabbitMQ definitions"></textarea>
                </div>
            </div>
                <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Graph !</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
